#!/bin/bash

#skript, mis v채ljastab, kas arv on paaris v천i mitte.

if [ $# != 1 ]
then
 echo -e "\033[1;31m[VIGA]:\033[1;37m K채ivita see skript koos arvuga, mille paarsust soovid kontrollida. N채iteks: ./paarsus 3"
else
 tarv=$1
 jaak=$(($tarv%2))
 if [ $jaak == 0 ] 
 then
  echo "$tarv on paarisarv."
 else
  echo "$tarv on paaritu arv."
 fi
fi
